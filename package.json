{
  "name": "sleak-magazine",
  "private": true,
  "version": "2.0.1",
  "description": "Website for German design magazine \"sleak\"",
  "scripts": {
    "serve": "parcel index.html -p 8080 --no-cache --hmr-port 8081",
    "build": "parcel build index.html --no-cache",
    "deploy": "npm run build && node scripts/deploy.js",
    "lint": "eslint ./ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonaskuske/sleak-magazine.git"
  },
  "keywords": [],
  "author": "Jonas Kuske",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonaskuske/sleak-magazine/issues"
  },
  "homepage": "https://github.com/jonaskuske/sleak-magazine#readme",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "gh-pages": "^2.0.1",
    "lint-staged": "^8.0.4",
    "parcel-bundler": "^1.10.3",
    "parcel-plugin-bundle-manifest": "^0.2.0",
    "parcel-plugin-clean-dist": "0.0.6",
    "parcel-plugin-static": "^1.0.0",
    "postcss-custom-media": "^7.0.7",
    "postcss-focus-visible": "^4.0.0",
    "prettier": "^1.15.2",
    "simple-git": "^1.107.0",
    "write-pkg": "^3.2.0",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "element-closest": "^2.0.2",
    "focus-visible": "^4.1.5",
    "intersection-observer": "^0.5.1",
    "normalize.css": "^8.0.1",
    "smoothscroll-anchor-polyfill": "^0.12.0",
    "smoothscroll-polyfill": "^0.4.3",
    "stickyfilljs": "^2.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "ie > 9",
    "> 1%"
  ],
  "parcel-plugin-static": {
    "source": "static",
    "destination": ""
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "htmlWhitespaceSensitivity": "strict"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "eslintIgnore": [
    ".cache/",
    "dist/"
  ],
  "deployedVersion": "2.0.0"
}
