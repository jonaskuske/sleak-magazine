{
  "name": "sleak-magazine",
  "private": true,
  "version": "1.0.0",
  "description": "Website for German design magazine \"sleak\"",
  "scripts": {
    "start": "npm run serve",
    "dev": "npm run serve",
    "serve": "npm run copy:articles && parcel index.html -p 8080",
    "build": "npm run copy:articles && parcel build index.html",
    "copy:articles": "mkdir -p ./dist/articles && cp -rf ./src/articles/* ./dist/articles/",
    "lint": "eslint ./ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonaskuske/sleak-magazine.git"
  },
  "keywords": [],
  "author": "Jonas Kuske",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonaskuske/sleak-magazine/issues"
  },
  "homepage": "https://github.com/jonaskuske/sleak-magazine#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "parcel-bundler": "^1.9.2",
    "parcel-plugin-clean-dist": "0.0.6",
    "prettier": "1.13.4"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "intersection-observer": "^0.5.0",
    "normalize.css": "^8.0.0",
    "smoothscroll-polyfill": "^0.4.3",
    "whatwg-fetch": "^2.0.4"
  },
  "browserslist": [
    "last 2 versions",
    "ie > 9",
    "> 1%"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "eslintIgnore": [
    ".cache/",
    "dist/"
  ]
}