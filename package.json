{
  "name": "sleak-magazine",
  "private": true,
  "version": "3.0.3",
  "description": "Website for »sleak« – design magazine",
  "scripts": {
    "serve": "node scripts/serve.js",
    "build": "parcel build index.html --no-cache --public-url https://dmp-magazin.de",
    "build:local": "parcel build index.html --no-cache",
    "deploy": "rimraf dist && npm run build && node scripts/deploy.js",
    "lint": "eslint ./ --fix",
    "prettier": "prettier --write *.{js,json,css,md,html}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonaskuske/sleak-magazine.git"
  },
  "keywords": [],
  "authors": [
    {
      "name": "Jonas Kuske",
      "url": "https://github.com/jonaskuske"
    },
    {
      "name": "Rieke Helmers",
      "url": "https://github.com/riekehieke"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonaskuske/sleak-magazine/issues"
  },
  "sitemap": {
    "siteURL": "https://dmp-magazin.de/",
    "exclude": [
      "articles/*",
      "404.html",
      "google0a94c009db3d9115.html"
    ]
  },
  "homepage": "https://github.com/jonaskuske/sleak-magazine#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "chalk": "^2.4.2",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "express": "^4.17.1",
    "fast-glob": "^2.2.7",
    "gh-pages": "^2.0.1",
    "lint-staged": "^8.2.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-asset-copier": "^1.0.0",
    "parcel-plugin-bundle-manifest": "^0.2.0",
    "parcel-plugin-clean-dist": "0.0.6",
    "parcel-plugin-sitemap": "^2.1.1",
    "postcss-custom-media": "^7.0.8",
    "postcss-focus-visible": "^4.0.0",
    "postcss-smoothscroll-anchor-polyfill": "^1.0.0",
    "posthtml-expressions": "^1.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "simple-git": "^1.113.0",
    "write-pkg": "^4.0.0",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "element-closest": "^3.0.1",
    "focus-visible": "^4.1.5",
    "intersection-observer": "^0.7.0",
    "normalize.css": "^8.0.1",
    "smoothscroll-anchor-polyfill": "^1.2.0",
    "smoothscroll-polyfill": "^0.4.4",
    "stickyfilljs": "^2.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "ie > 9",
    "> 1%",
    "not dead"
  ],
  "assetsPath": "static",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "htmlWhitespaceSensitivity": "strict"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "eslintIgnore": [
    ".cache/",
    "dist/"
  ],
  "deployedVersion": "3.0.3"
}
